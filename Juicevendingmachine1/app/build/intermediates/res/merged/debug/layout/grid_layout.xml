<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lineImag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <FrameLayout
            android:id="@+id/goodsImageFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/goodsImage"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:background="@drawable/juicel"/>
            <ImageView
                android:id="@+id/useless"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/useless"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/priceline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/bacbitmap"
            android:layout_height="28dp"
            android:layout_width="90dp"
            android:background="@drawable/pribacground"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pricetext"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="6.00"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/addcar_selector"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
