<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aircontrol.demo.ui.shopgoodsActivity">
    <LinearLayout
        android:id="@+id/adlingGoods"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/adbac"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/ad"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/goods"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/helpbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/backlevel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_selector"/>
            <TextView
                android:id="@+id/chosetitle"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/choosejuice"/>
            <TextView
                android:id="@+id/helpImag"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/help_seclector"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/centerLine"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:scrollbars="none"
            android:transcriptMode="alwaysScroll"
            android:gravity="center">
           <GridView
               android:id="@+id/gridgoods"
               android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:paddingLeft="20dp"
               android:paddingRight="20dp"
               android:horizontalSpacing="10dp"
               android:numColumns="3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shoppingCarTab"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="right">
            <FrameLayout
                android:id="@+id/shopframe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/viewfinder_laser"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:text="1"/>
                <TextView
                    android:id="@+id/shopppingCar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shopcar_selector"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
