<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aircontrol.demo.ui.alipayActivity">
    <LinearLayout
        android:id="@+id/upline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/ImagViewbac"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/ad"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomTab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/uptabline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/barback"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/back_selector"/>
            <TextView
                android:id="@+id/barTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/barpay"/>
            <TextView
                android:id="@+id/barclose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/close_selector"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/barcodepay"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/barline"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="@drawable/barcodebac"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/barImage"
                    android:layout_marginTop="12dp"
                    android:layout_height="80dp"
                    android:layout_width="80dp"/>
                <TextView
                    android:id="@+id/barprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="89.2"
                    android:textColor="@color/unify_right_temp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/changgemode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/view"
                android:layout_height="20dp"
                android:layout_width="match_parent"
                android:background="@drawable/chosepaymode"/>
        </LinearLayout>
      <LinearLayout
          android:id="@+id/bottomchange"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:gravity="center">
          <TextView
              android:id="@+id/wechatpay"
              android:layout_width="55dp"
              android:layout_height="55dp"
              android:background="@drawable/wechatpay"/>
          <TextView
              android:id="@+id/vippay"
              android:layout_height="55dp"
              android:layout_width="55dp"
              android:layout_marginLeft="50dp"
              android:background="@drawable/vippay_selector"/>
      </LinearLayout>
    </LinearLayout>
</LinearLayout>
