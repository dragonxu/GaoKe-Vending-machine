<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/listitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/listgoodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:text="橙汁"/>
        <TextView
            android:id="@+id/centerprice"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="6.00"
            android:gravity="center_vertical"
            android:textColor="@color/yellow"/>
        <LinearLayout
            android:id="@+id/chosenumberline"
            android:layout_width="65dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/previewshopgoods"
            android:gravity="center"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/mianline"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:paddingRight="0dp">
            <TextView
                android:id="@+id/cutline"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/delete_selector"/>
            <TextView
                android:id="@+id/listnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:padding="0dp"
                android:layout_marginBottom="8dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/addline"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/add_selector"
                android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
