<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg"
    android:paddingTop="0dp">
   <ImageView
       android:id="@+id/close"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:src="@drawable/abc_ic_clear_disabled"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/goods_picture"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@drawable/setting_auto_wind_speed_selector"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/price"
        android:layout_height="40dp"
        android:layout_width="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/goods_picture"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_bg"
        android:gravity="center"
        android:text="￥9.00"
        android:textColor="@color/result_minor_text"/>
    <EditText
        android:id="@+id/et_describe"
        android:layout_below="@+id/price"
        android:gravity="center_horizontal"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_bg"/>
    <RelativeLayout
        android:id="@+id/item_ShoppingCarView"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_describe"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_alignLeft="@+id/et_describe"
        android:layout_alignStart="@+id/et_describe"
        android:layout_toLeftOf="@+id/goods_picture"
        android:layout_toStartOf="@+id/goods_picture">
        <FrameLayout
            android:id="@+id/item_shop"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:background="@drawable/circle1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/item_shopcarLable"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/shoppingcar"/>
            <TextView
                android:id="@+id/item_number"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="13"
                android:textSize="12sp"
                android:layout_gravity="bottom|center"/>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/line"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/item_ShoppingCarView"
        android:layout_toRightOf="@+id/item_ShoppingCarView"
        android:layout_below="@+id/et_describe"
        android:layout_alignRight="@+id/et_describe"
        android:layout_alignEnd="@+id/et_describe">
        <Button
            android:id="@+id/addCar"
            style="@style/Ripple_Button_BG"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="加入购物车"
            android:layout_alignBottom="@+id/item_ShoppingCarView"
            android:layout_toRightOf="@+id/item_ShoppingCarView"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/buynow"
            style="@style/Ripple_Button_BG"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="立即购买"
            android:layout_alignBottom="@+id/addCar"
            android:layout_toRightOf="@+id/addCar"
            android:layout_alignRight="@+id/et_describe"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>
